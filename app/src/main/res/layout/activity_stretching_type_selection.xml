<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.matt.calisthenicsappv1.Activities.StretchingTypeSelectionAct">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Random Stretching Routine"
        android:layout_marginTop="20dp"
        android:id="@+id/toRandomStretchAct_btn"
        android:layout_gravity="center"
        android:onClick="toRandomStretch_Click"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Custom Stretching Routine"
        android:layout_marginTop="20dp"
        android:id="@+id/toCustomStretchAct_btn"
        android:layout_gravity="center"
        android:onClick="toCustomStretch_Click"/>

</LinearLayout>
